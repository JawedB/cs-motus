{% extends 'base.html.twig' %}

{% block playbutton %}
<a type="button" class="btn btn-warning btn-style" href="{{path('app_potd')}}">Player of the day</a>
{% endblock %}

{% block subtitle %}
Streak
{% endblock %}

{% block body %}
<div class="content" data-type="streak" data-controller="motus" id="container-motus">

    <div class="row mb-1 topgrid">
        <div class="col-4 pt-2 text-end">
            <span id="current-streak">Current streak : 0</span>
        </div>

        <div class="col-4 text-start">
            <span class="btn btn-danger" id="not-valid">Not a valid player</span>
        </div>

        <div class="col-4 text-end">
        </div>
    </div>

    <table id="grid">

    </table>

    <span class="mt-3" id="answer"></span>

    <div id="keyboard">
    </div>
</div>
{% endblock %}

{% block javascripts %}

<script type="text/javascript">
    var positivePath = "{{asset('audio/positive_beep.mp3')}}";
    var negativePath = "{{asset('audio/negative_beep.mp3')}}";
    var applausePath = "{{asset('audio/applause.mp3')}}";
    var clickPath = "{{asset('audio/clic.mp3')}}";
</script>

{% endblock %}
